 $(() => { 

  $(".orderInUserPage").on("click", function() { 
    $(this).next().toggleClass("collapse");
   })
  
  function scrollToAnchor(aid){
    var aTag = $(aid);
    $('html,body').animate({scrollTop: aTag.offset().top},'slow');
  }

  function scrollToElement(id) { 
    $(`a[href='${id}']`).on("click", function(event) { event.preventDefault(); scrollToAnchor(`${id}`) })
  }

  scrollToElement("#showAccount")
  scrollToElement("#showOrders")
  scrollToElement("#section02")

  let lastOrder = <%= Order.last.id %> 
  for(let i = 1; i <= lastOrder; i++) {
    $(`#showOrder${i}`).on("click", function() { $(`#order${i}Title`).toggleClass("collapse"); $(`#order${i}Content`).toggleClass("collapse") } )
  } 

 })