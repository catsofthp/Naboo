<!-- Header (account) -->
<section class="header-account-page bg-primary d-flex align-items-end" data-offset-top="#header-main" style="height: 180px">
    <!-- Header container -->
    <div class="container pt-4 pt-lg-0">
      <div class="row">
        <div class=" col-lg-12">
          <!-- Salute + Small stats -->
          <div class="row align-items-center mb-4">
            <div class="col-md-5 mb-4 mb-md-0">
                <span class="h2 mb-0 text-white">Hello, <%= current_user.first_name %></span><br>
                <span class="text-white">Comment chat va ?</span>
            </div>
            <div class="col-auto flex-fill d-none d-xl-block">
              <ul class="list-inline row justify-content-lg-end mb-0">
                <li class="list-inline-item col-sm-4 col-md-auto px-3 my-2 mx-0">
                  <span class="badge badge-dot text-white">
                    <i class="bg-success"></i>Nombres de commandes vendues
                  </span>
                  <a class="d-sm-block h5 text-white font-weight-bold pl-2" href="#">
                    <%= Order.all.count %>
                    <small class="fas fa-angle-up text-success"></small>
                  </a>
                </li>
                <li class="list-inline-item col-sm-4 col-md-auto px-3 my-2 mx-0">
                  <span class="badge badge-dot text-white">
                    <i class="bg-warning"></i>Prix moyen / commande
                  </span>
                  <a class="d-sm-block h5 text-white font-weight-bold pl-2" href="#">
                    <%= Order.average_price.round(2) %> €
                    <small class="fas fa-angle-up text-warning"></small>
                  </a>
                </li>
                <li class="list-inline-item col-sm-4 col-md-auto px-3 my-2 mx-0">
                  <span class="badge badge-dot text-white">
                    <i class="bg-danger"></i>Total Biff earned
                  </span>
                  <a class="d-sm-block h5 text-white font-weight-bold pl-2" href="#">
                    <%= Order.total_price.round(2) %> €
                    <small class="fas fa-angle-down text-danger"></small>
                  </a>
                </li>
              </ul>
            </div>
          </div>
          <!-- Account navigation -->
          <div class="d-flex">
            <a href="#" class="btn btn-icon btn-group-nav shadow btn-neutral">
              <span class="btn-inner--icon"><i class="fas fa-user"></i></span>
              <span class="btn-inner--text d-none d-md-inline-block"><%= current_user.first_name %> <%= current_user.last_name %></span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
  <section class="slice">
    <div class="container">
      <div class="row row-grid">
        <div class="col-lg-9 order-lg-2">
      <!-- General information form -->
      
        <!-- EMAIL + PREVIOUS PASSWORD ROW -->

        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
        <div>      
          <% if current_user.is_admin %>
            <%= link_to new_product_path, method: "GET" do %>
              <button type="button" class="btn btn-soft-warning btn-icon btn-sm">Poster une nouvelle annonce</button>
            <% end %>
          <% end %>
        </div><br>
        <!-- Show orders -->
        <div id="showOrders">
          <div class="card bg-gradient-warning hover-shadow-lg">
              <div class="card-body py-3">
                <div class="row row-grid align-items-center">
                  <div class="col-lg-8">
                    <div class="media align-items-center">
                      <div class="media-body">
                        <h5 class="text-white mb-0 align-left">Historique des Commandes</h5>
                      </div>
                    </div>
                  </div>
                  <div class="col-auto flex-fill mt-4 mt-sm-0 text-sm-right d-none d-lg-block">
                    <a href="/products" class="btn btn-sm btn-white rounded-pill btn-icon shadow">
                      <span class="btn-inner--icon"><i class="fas fa-fire"></i></span>
                      <span class="btn-inner--text">Back to business</span>
                    </a>
                  </div>
                </div>
              </div>
            </div>
          <%= render "layouts/orders", orders: Order.all %>
        </div>

    </div>
    <!-- FORM END -->


          </div>

        </div>
      </div>
    </div>
</div>
</section>
</div>