    <% end %>
    <div class="col-md-12">
      <div class="form-group">
    <div class="field">
      <%= form.label :titre, class: "form-control-label" %>
      <%= form.text_field :title, class: "form-control" %>
    </div>
      </div>
    </div>

    <div class="col-md-12">
      <div class="form-group">
    <div class="field">
      <%= form.label :description, class: "form-control-label" %>
      <%= form.text_area :description, class: "form-control" %>
    </div>
      </div>
    </div>

    <div class="col-md-12">
      <div class="form-group">
    <div class="field">
      <%= form.label :prix, class: "form-control-label" %>
      <%= form.text_field :price, class: "form-control" %>
    </div>
      </div>
    </div>

    <div class="col-md-12">
      <div class="actions">
        <%= form.submit "Mettre en page mon annonce", class: "btn btn-sm btn-soft-primary" %>
      </div>
    </div>
    </div>
  <% end %>
</div>