<div class="main-content">
  <section class="slice">
    <div class="container">
      <div class="row row-grid">
        <div class="col-lg-6">
          <div data-toggle="sticky" data-sticky-offset="30">
            <a href="../../assets/img/theme/light/shop-product-lg-2.jpg" data-fancybox>
              <img alt="Image placeholder" src="<%= @product.image_url %>" class="img-fluid">
            </a>
            <div class="mt-4 text-center">
              <a href="../../assets/img/theme/light/shop-product-lg-2.jpg" data-fancybox>View gallery</a>
            </div>
          </div>
        </div>
        <div class="col-lg-6">
          <div class="pl-lg-5">
            <!-- Product title -->
            <h5 class="h4"><%= @product.title %></h5>
            <h6 class="text-sm">Processor 256GB Storage</h6>
            <!-- Rating -->
            <div class="row align-items-center">
              <div class="col-6">
                <span class="static-rating static-rating-sm d-block"><i class="star fas fa-star voted"></i>
                  <i class="star fas fa-star voted"></i>
                  <i class="star fas fa-star voted"></i>
                  <i class="star fas fa-star voted"></i>
                  <i class="star fas fa-star"></i></span>
                </div>
                <div class="col-6 text-right">
                  <ul class="list-inline mb-0">
                    <li class="list-inline-item">
                      <span class="badge badge-pill badge-soft-info">ID: #548970</span>
                    </li>
                    <li class="list-inline-item">
                      <span class="badge badge-pill badge-soft-success">In stock</span>
                    </li>
                  </ul>
                </div>
              </div>
              <!-- Description -->
              <div class="py-4 my-4 border-top border-bottom">
                <h6 class="text-sm">Description:</h6>
                <p class="text-sm mb-0">
                  <%= @product.description %>
                </p>
              </div>
              <div class="row align-items-center">
                <div class="col-sm-6 mb-4 mb-sm-0">
                  <span class="d-block h3 mb-0"><%= @product.price %> €</span>
                  <a href="#" class="text-sm">Choose a financing option</a>
                </div>
                <div class="col-sm-6 text-sm-right">
                  <!-- Add to cart -->
                  <% if user_signed_in? %>
                    <%= link_to carts_path(:product_id => @product.id), remote: true, method: "POST" do %>
                      <button type="button" class="btn btn-primary btn-icon" id="addToCartBtn"> Add to cart <i class='fas fa-shopping-bag'></i> </button>
                    <% end %>
                  <% else %>
                    <%= link_to "Please log in to purchase", new_user_session_path, class: "class='btn btn-primary btn-icon'" %>
                  <% end %>
                  <div id="notice-area"></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="slice slice-lg delimiter-top" id="sct-suggested-products">
    <div class="container">
      <div class="mb-5 text-center">
        <h3 class="h6">Nos chats les plus dociles<i class="fas fa-angle-down text-xs ml-3"></i></h3>
      </div>
      <div class="row">

        <% @products.each do |product| %>
        <div class="col-lg-3 col-sm-6">
          <div class="card card-product">
            <div class="card-image">
              <img alt="Image placeholder" src="<%= product.image_url %>" class="img-center img-fluid">
            </div>
            <div class="card-body text-center pt-0">
              <h6><a href="#"><%= product.title %></a></h6>
              <span class="card-price"><%= product.price %> €</span><br>
              <%= link_to 'Voir le chaton', product, class: "btn btn-outline-info btn-sm" %>
            </div>
            <div class="actions card-product-actions" data-animation-in="slideInLeft" data-animation-out="slideOutLeft">
              <button type="button" class="action-item" data-toggle="tooltip" data-original-title="Add to cart">
                <i class="fas fa-shopping-bag"></i>
              </button>
              <button type="button" class="action-item" data-toggle="tooltip" data-original-title="Wishlist">
                <i class="fas fa-heart"></i>
              </button>
            </div>
          </div>
        </div>
        <% end %>
  </section>

  <section class="slice slice-xl bg-cover bg-size--cover" style="background-image: url(https://images.pexels.com/photos/96399/pexels-photo-96399.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260); background-position: center center;">
        <span class="mask bg-dark opacity-2"></span>
        <div class="container py-6">
          <div class="row justify-content-center">
            <div class="col-lg-6 col-xl-7 text-center">
              <div class="mb-5">
                <h1 class="text-white">Try a new experience</h1>
                <p class="lead text-white mt-2">And make our beloved cats happier than ever.</p>
              </div>
              <a href="#" class="btn btn-white btn-icon rounded-pill shadow hover-shadow-lg hover-translate-y-n3">
                <span class="btn-inner--text">Get started</span>
                <span class="btn-inner--icon"><i class="fas fa-angle-right"></i></span>
              </a>
            </div>
          </div>
        </div>
  </section>